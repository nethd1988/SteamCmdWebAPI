@{
    /* Tệp: Pages/Shared/_DashboardLayout.cshtml */
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SteamAUTO</title>

    <!-- Google fonts for icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png">
</head>
<body>
    <!-- Mobile Menu Toggler -->
    <button class="menu-toggler">
        <span class="material-symbols-rounded">menu</span>
    </button>

    <aside class="sidebar">
        <!-- Sidebar header -->
        <header class="sidebar-header">
            <a href="/" class="header-logo">
                <img src="~/images/logo.png" alt="SteamAUTO">
            </a>
            <button class="toggler sidebar-toggler">
                <span class="material-symbols-rounded">chevron_left</span>
            </button>
        </header>

        <nav class="sidebar-nav">
            <!-- Primary top nav -->
            <ul class="nav-list primary-nav">
                <li class="nav-item">
                    <a href="/" class="nav-link @(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">dashboard</span>
                        <span class="nav-label">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/ProfileManager" class="nav-link @(ViewData["ActivePage"] as string == "ProfileManager" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">apps</span>
                        <span class="nav-label">Quản lý profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Create" class="nav-link @(ViewData["ActivePage"] as string == "Create" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">add_circle</span>
                        <span class="nav-label">Thêm profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/UpdateManagement" class="nav-link @(ViewData["ActivePage"] as string == "UpdateManagement" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">update</span>
                        <span class="nav-label">Quản lý cập nhật</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/AutoRegister" class="nav-link @(ViewData["ActivePage"] as string == "AutoRegister" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">device_hub</span>
                        <span class="nav-label">Đăng ký với Server</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Settings" class="nav-link @(ViewData["ActivePage"] as string == "Settings" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">settings</span>
                        <span class="nav-label">Cài đặt</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Logs" class="nav-link @(ViewData["ActivePage"] as string == "Logs" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">article</span>
                        <span class="nav-label">Nhật ký</span>
                    </a>
                </li>
            </ul>

            <!-- Secondary bottom nav -->
            <ul class="nav-list secondary-nav">
                <li class="nav-item">
                    <a href="/Privacy" class="nav-link @(ViewData["ActivePage"] as string == "Privacy" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">info</span>
                        <span class="nav-label">Thông tin</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/ChangePassword" class="nav-link @(ViewData["ActivePage"] as string == "ChangePassword" ? "active" : "")">
                        <span class="nav-icon material-symbols-rounded">key</span>
                        <span class="nav-label">Đổi mật khẩu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Logout" class="nav-link">
                        <span class="nav-icon material-symbols-rounded">logout</span>
                        <span class="nav-label">Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Thêm script SignalR và SteamCMD Console vào tất cả các trang -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/steamcmd-console.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>