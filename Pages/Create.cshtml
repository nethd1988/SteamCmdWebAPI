.game-select-modal .modal-title i {
    font-size: 24px;
}

.game-select-modal .btn-close {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    opacity: 1;
    width: 32px;
    height: 32px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
}

.game-select-modal .btn-close:hover {
