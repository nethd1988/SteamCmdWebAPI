@section Scripts {
    <script>
        $(document).ready(function () {
            // Biến lưu danh sách game đã quét
            var scannedGames = [];
            
            // Xử lý checkbox sử dụng tài khoản từ SteamAccounts
            $('#UseSteamAccounts').on('change', function() {
                if($(this).is(':checked')) {
                    // Ẩn trường nhập tài khoản thủ công
                    $('#manualAccountInputs').hide();
                    // Hiển thị thông báo
                    $('#steamAccountsMessage').show();
                    // Xóa giá trị trong trường nhập
                    $('#Username').val('');
                    $('#Password').val('');
                } else {
                    // Hiện trường nhập tài khoản thủ công
                    $('#manualAccountInputs').show();
                    // Ẩn thông báo
                    $('#steamAccountsMessage').hide();
                }
            });

            // Kích hoạt ngay khi trang load nếu checkbox đã được check
            if($('#UseSteamAccounts').is(':checked')) {
                $('#manualAccountInputs').hide();
                $('#steamAccountsMessage').show();
            }

            // Xử lý nút quét danh sách game
            $('#scanGamesBtn').on('click', function() {
                var btn = $(this);
                btn.prop('disabled', true);
                btn.html('<i class="bi bi-hourglass"></i> Đang quét...');

                $.ajax({
                    url: '?handler=ScanGames',
                    type: 'GET',
                    success: function(data) {
                        if (data.success && data.games && data.games.length > 0) {
                            // Lưu danh sách game đã quét vào biến global
                            scannedGames = data.games;
                            
                            // Hiển thị danh sách game
                            var gamesList = $("#gamesList");
                            gamesList.empty();

                            data.games.forEach(function(game) {
                                var listItem = $(`
                                    <div class="game-item">
                                        <div class="game-info">
                                            <div class="game-title">${game.gameName}</div>
                                            <div class="game-details">
                                                <span class="app-id">App ID: ${game.appId}</span>
                                                <span class="install-dir">Đường dẫn: ${game.installDir}</span>
                                            </div>
                                        </div>
                                        <button class="btn-select">
                                            <i class="bi bi-check2-circle"></i>Chọn
                                        </button>
                                    </div>
                                `);

                                // Lưu data để sử dụng khi tìm kiếm
                                listItem.data('name', game.gameName);
                                listItem.data('appid', game.appId);
                                listItem.data('dir', game.installDir);

                                listItem.on('click', function(e) {
                                    // Nếu click vào nút, thực hiện lựa chọn
                                    if ($(e.target).hasClass('btn-select') || $(e.target).closest('.btn-select').length > 0) {
                                        // Điền thông tin vào form
                                        $("#Profile_Name").val(game.gameName);
                                        $("#Profile_AppID").val(game.appId);
                                        $("#Profile_InstallDirectory").val(game.installDir);
                                        
                                        // Tự động check vào ô sử dụng tài khoản từ SteamAccounts
                                        $("#UseSteamAccounts").prop('checked', true).trigger('change');

                                        // Đóng modal
                                        hideModal('gamesModal');
                                    }
                                });

                                gamesList.append(listItem);
                            });

                            // Cập nhật số lượng game
                            $("#gameCount").text(data.games.length + ' game');

                            // Hiển thị modal danh sách game
                            showModal('gamesModal');
                        } else {
                            alert(data.message || 'Không tìm thấy game nào');
                        }
                    },
                    error: function() {
                        alert('Không thể quét danh sách game. Vui lòng thử lại sau.');
                    },
                    complete: function() {
                        btn.prop('disabled', false);
                        btn.html('<i class="bi bi-search"></i> Quét danh sách game');
                    }
                });
            });
            
            // Hiển thị danh sách game
            function showGamesListModal(games) {
                // Hiển thị số lượng game tìm thấy
                $("#searchResultText").text(`Đã tìm thấy ${games.length} game đã cài đặt trên máy tính.`);

                // Hiển thị danh sách game
                var gamesList = $("#gamesList");
                gamesList.empty();

                games.forEach(function(game) {
                    var listItem = $(`
                        <div class="game-item">
                            <div class="game-info">
                                <div class="game-title">${game.gameName}</div>
                                <div class="game-details">
                                    <span class="app-id">App ID: ${game.appId}</span>
                                    <span class="install-dir">Đường dẫn: ${game.installDir}</span>
                                </div>
                            </div>
                            <button class="btn-select">
                                <i class="bi bi-check2-circle"></i>Chọn
                            </button>
                        </div>
                    `);

                    // Lưu data để sử dụng khi tìm kiếm
                    listItem.data('name', game.gameName);
                    listItem.data('appid', game.appId);
                    listItem.data('dir', game.installDir);

                    listItem.on('click', function(e) {
                        // Nếu click vào nút, thực hiện lựa chọn
                        if ($(e.target).hasClass('btn-select') || $(e.target).closest('.btn-select').length > 0) {
                            // Điền thông tin vào form
                            $("#Profile_Name").val(game.gameName);
                            $("#Profile_AppID").val(game.appId);
                            $("#Profile_InstallDirectory").val(game.installDir);
                            
                            // Tự động check vào ô sử dụng tài khoản từ SteamAccounts
                            $("#UseSteamAccounts").prop('checked', true).trigger('change');

                            // Đóng modal
                            hideModal('gamesModal');
                        }
                    });

                    gamesList.append(listItem);
                });

                // Cập nhật số lượng game
                $("#gameCount").text(games.length + ' game');

                // Hiển thị modal danh sách game
                showModal('gamesModal');
            }
            
            // Hàm hiển thị modal
            function showModal(modalId) {
                var modal = $('#' + modalId);
                modal.addClass('show');
                $('body').addClass('modal-open');
            }

            // Hàm ẩn modal
            function hideModal(modalId) {
                var modal = $('#' + modalId);
                modal.removeClass('show');
                $('body').removeClass('modal-open');
            }

            // Xử lý sự kiện đóng modal
            $(document).on('click', '.close-modal', function(e) {
                e.preventDefault();
                var modalId = $(this).closest('.game-select-modal').attr('id');
                hideModal(modalId);
            });

            // Đóng modal khi click ra ngoài
            $(document).on('click', '.game-select-modal', function(e) {
                if ($(e.target).hasClass('game-select-modal')) {
                    var modalId = $(e.target).attr('id');
                    hideModal(modalId);
                }
            });

            // Xử lý tìm kiếm trong modal games
            $(document).on("keyup", "#gameSearchInput", function() {
                var value = $(this).val().toLowerCase();
                var visibleCount = 0;

                $("#gamesList .game-item").each(function() {
                    var gameText = $(this).find('.game-info').text().toLowerCase();
                    var isVisible = gameText.indexOf(value) > -1;
                    $(this).toggle(isVisible);

                    if (isVisible) {
                        visibleCount++;
                    }
                });

                // Cập nhật số lượng game hiển thị
                $("#gameCount").text(visibleCount + ' game');
            });

            // Khi chọn profile từ server, serialize profile và gán vào hidden field
            function handleServerProfileSelected(profile) {
                $("#Profile_Name").val(profile.name);
                $("#Profile_AppID").val(profile.appID);
                $("#ServerProfileJson").val(JSON.stringify(profile));
                $("#accountSection").hide();
                $("#Profile_InstallDirectory").val("").focus();
            }

            // Khi chọn profile từ server (ví dụ trong sự kiện change của select), gọi handleServerProfileSelected(profile)
            $('#serverProfile').on('change', function() {
                var selectedProfile = $(this).val();
                if (!selectedProfile) {
                    $('#accountSection').show();
                    return;
                }
                // Gọi AJAX lấy profile từ server
                $.ajax({
                    url: "?handler=ProfileFromServer",
                    type: "GET",
                    cache: false,
                    data: { profileName: selectedProfile },
                    success: function(response) {
                        if (response && response.success && response.profile) {
                            handleServerProfileSelected(response.profile);
                        } else {
                            alert("Không thể tải thông tin profile: " + (response.error || "Lỗi không xác định"));
                        }
                    },
                    error: function(xhr, status, error) {
                        alert("Lỗi khi tải thông tin profile: " + error);
                    }
                });
            });

            // Xử lý khi nhấn nút Nhập tất cả game
            $(document).on('click', '#importAllGamesBtn', function() {
                if (scannedGames.length === 0) {
                    alert('Không có game nào để nhập');
                    return;
                }
                
                if (confirm('Bạn có muốn nhập tất cả ' + scannedGames.length + ' game vào hệ thống không?')) {
                    // Chuyển đổi định dạng dữ liệu cho API
                    const gamesToImport = scannedGames.map(game => ({
                        AppId: game.appId,
                        Name: game.gameName,
                        InstallPath: game.installDir
                    }));
                    
                    // Hiển thị trạng thái đang xử lý
                    var btn = $(this);
                    btn.prop('disabled', true);
                    btn.html('<i class="bi bi-hourglass"></i> Đang nhập...');
                    
                    // Gửi dữ liệu lên server
                    $.ajax({
                        url: '?handler=ImportAllGames',
                        type: 'POST',
                        data: JSON.stringify(gamesToImport),
                        contentType: 'application/json',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                hideModal('gamesModal');
                                alert('Đã nhập ' + response.importedCount + ' game thành công');
                                
                                if (confirm('Bạn có muốn đi đến trang quản lý cập nhật không?')) {
                                    window.location.href = '/UpdateManagement';
                                }
                            } else {
                                alert('Lỗi: ' + (response.message || 'Không thể nhập game'));
                            }
                        },
                        error: function(xhr, status, error) {
                            alert('Lỗi khi gửi yêu cầu: ' + error);
                        },
                        complete: function() {
                            btn.prop('disabled', false);
                            btn.html('<i class="bi bi-download me-1"></i> Nhập tất cả game');
                        }
                    });
                }
            });
        });
    </script>
}