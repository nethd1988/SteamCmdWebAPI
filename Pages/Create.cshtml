@page
@using SteamCmdWebAPI.Models
@using SteamCmdWebAPI.Services
@model SteamCmdWebAPI.Pages.CreateModel
@{
    ViewData["Title"] = "Tạo cấu hình mới - SteamAUTO";
}

<div class="page-header">
    <h1>Tạo Profile Game Mới</h1>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
        <i class="bi bi-@(Model.IsSuccess ? "check-circle" : "exclamation-triangle") me-2"></i>
        @Model.StatusMessage
    </div>
}

<div class="mb-3">
    <button type="button" id="scanGamesBtn" class="btn btn-info" data-bs-toggle="tooltip" title="Quét các thư mục trên máy tính để tìm game đã cài đặt">
        <i class="bi bi-search"></i> Quét danh sách game
    </button>
</div>

<div class="row">
    <!-- Phần nhập thông tin cấu hình - Bên trái -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thông tin cấu hình mới</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="SaveProfile">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="Profile_Name" class="form-label">Tên Profile</label>
                        <input type="text" class="form-control" id="Profile_Name" asp-for="Profile.Name" required>
                    </div>

                    <div class="mb-3">
                        <label for="Profile_AppID" class="form-label">App ID</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="Profile_AppID" asp-for="Profile.AppID" required>
                            <a href="https://steamdb.info/" target="_blank" class="btn btn-outline-secondary" title="Tìm App ID trên SteamDB">
                                <i class="bi bi-search"></i> SteamDB
                            </a>
                        </div>
                        <small class="text-muted">Nhập ID của game trên Steam. Ví dụ: 730 cho CS:GO</small>
                    </div>

                    <div class="mb-3">
                        <label for="Profile_InstallDirectory" class="form-label">Đường dẫn cài đặt</label>
                        <input type="text" class="form-control" id="Profile_InstallDirectory" asp-for="Profile.InstallDirectory" required>
                        <small class="text-muted">Thư mục cài đặt game</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tài khoản Steam (tùy chọn)</label>
                        <input type="text" class="form-control mb-2" id="Username" asp-for="Username" placeholder="Tên đăng nhập Steam">
                        <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Mật khẩu Steam">
                        <small class="text-muted">Để trống nếu muốn đăng nhập ẩn danh</small>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Profile_ValidateFiles" asp-for="Profile.ValidateFiles">
                                <label class="form-check-label" for="Profile_ValidateFiles">Kiểm tra và sửa chữa file</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Profile_AutoRun" asp-for="Profile.AutoRun">
                                <label class="form-check-label" for="Profile_AutoRun">Tự động chạy khi khởi động</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Profile_Arguments" class="form-label">Tham số bổ sung (tùy chọn)</label>
                        <input type="text" class="form-control" id="Profile_Arguments" asp-for="Profile.Arguments">
                        <small class="text-muted">Các tham số tùy chọn cho SteamCMD</small>
                    </div>

                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary me-2">Lưu cấu hình</button>
                        <a asp-page="/Index" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Phần chọn profile từ server -->
        <div class="card mt-4">
            <div class="card-header bg-gradient-primary text-white py-3">
                <h5 class="mb-0">
                    <i class="bi bi-cloud-download me-2"></i>
                    Chọn profile từ Server
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="mb-4">
                    <label for="serverProfile" class="form-label fw-bold mb-2">Profiles có sẵn trên server:</label>
                    <select id="serverProfile" class="form-select form-select-lg">
                        <option value="">-- Chọn profile từ server --</option>
                        @foreach (var profileName in Model.ServerProfiles)
                        {
                            <option value="@profileName">@profileName</option>
                        }
                    </select>
                </div>

                <div class="d-flex gap-3">
                    <button id="getProfileBtn" class="btn btn-info btn-lg flex-grow-1">
                        <i class="bi bi-download me-2"></i>Tải thông tin
                    </button>
                    <button id="importProfileBtn" class="btn btn-success btn-lg flex-grow-1">
                        <i class="bi bi-cloud-download me-2"></i>Nhập profile từ server
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần hướng dẫn - Bên phải -->
    <div class="col-md-4">
        <div class="card sticky-top" style="top: 20px;">
            <div class="card-header bg-gradient-success text-white py-3">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Hướng dẫn
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="guide-section mb-4">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-1-circle me-2 text-primary"></i>
                        Cách tạo profile mới
                    </h6>
                    <p class="text-muted">Nhập thông tin cần thiết cho profile game:</p>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Tên Profile:</strong> Tên để nhận diện profile
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>App ID:</strong> ID của game trên Steam
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Đường dẫn cài đặt:</strong> Thư mục cài đặt game
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Tham số bổ sung:</strong> Các tham số tùy chọn
                        </li>
                    </ul>
                </div>

                <div class="guide-section">
                    <h6 class="fw-bold mb-3">
                        <i class="bi bi-2-circle me-2 text-primary"></i>
                        Tài khoản Steam
                    </h6>
                    <p class="text-muted">Nhập thông tin tài khoản Steam để tải game (nếu game yêu cầu đăng nhập):</p>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                        <div>
                            Bạn cũng có thể sử dụng nút "Quét danh sách game" để tự động tìm kiếm các game đã cài đặt trên máy.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal chọn game -->
<div class="game-select-modal" id="gamesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-controller"></i>
                    Chọn game để tạo Profile
                    <span class="game-count" id="gameCount">0 game</span>
                </h5>
                <button type="button" class="btn-close btn-close-white close-modal" aria-label="Đóng"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <!-- Thông báo -->
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <span>Nhấp vào game để điền thông tin vào form.</span>
                </div>

                <!-- Thanh tìm kiếm -->
                <div class="search-container">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="search-input" id="gameSearchInput" placeholder="Tìm kiếm game...">
                </div>

                <!-- Thông báo số lượng game tìm thấy -->
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i>
                    <span id="searchResultText">Đã tìm thấy 50 game đã cài đặt trên máy tính.</span>
                </div>

                <!-- Danh sách game -->
                <div class="games-list" id="gamesList">
                    <!-- Nội dung sẽ được thêm vào bằng JavaScript -->
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn-secondary close-modal">
                    <i class="bi bi-x-circle me-1"></i> Đóng
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal hiển thị trạng thái đang quét -->
<div class="game-select-modal" id="scanningModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="loading">
                    <div class="spinner"></div>
                    <h5>Đang quét các thư mục trên máy tính...</h5>
                    <p class="loading-text">Quá trình này có thể mất vài phút.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* CSS cho modal chọn game */
    .game-select-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1050;
        overflow: hidden;
        outline: 0;
        background-color: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
    }

    .game-select-modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
        animation: fadeIn 0.3s ease;
    }

    .game-select-modal .modal-dialog {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        pointer-events: auto;
        transform: translateY(0);
        transition: transform 0.3s ease;
        animation: slideDown 0.3s ease;
    }

    .game-select-modal .modal-content {
        border: none;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        background-color: #fff;
        overflow: hidden;
    }

    .game-select-modal .modal-header {
        background: linear-gradient(135deg, #4f46e5, #3b82f6);
        color: white;
        border: none;
        padding: 24px;
        position: relative;
    }

    .game-select-modal .modal-title {
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 20px;
    }

    .game-select-modal .modal-title i {
        font-size: 24px;
    }

    .game-select-modal .btn-close {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        opacity: 1;
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

    .game-select-modal .btn-close:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: rotate(90deg);
    }

    .game-select-modal .modal-body {
        padding: 24px;
    }

    /* Thanh tìm kiếm */
    .game-select-modal .search-container {
        position: relative;
        margin-bottom: 24px;
    }

    .game-select-modal .search-input {
        width: 100%;
        padding: 16px 20px 16px 50px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 16px;
        background-color: #f8fafc;
        transition: all 0.3s;
    }

    .game-select-modal .search-input:focus {
        outline: none;
        border-color: #4f46e5;
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        background-color: #fff;
    }

    .game-select-modal .search-icon {
        position: absolute;
        top: 50%;
        left: 18px;
        transform: translateY(-50%);
        color: #64748b;
        font-size: 20px;
    }

    /* Thông báo */
    .game-select-modal .alert {
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
        border: none;
    }

    .game-select-modal .alert-info {
        background-color: #EEF2FF;
        color: #4f46e5;
    }

    .game-select-modal .alert-success {
        background-color: #ECFDF5;
        color: #059669;
    }

    .game-select-modal .alert i {
        font-size: 22px;
    }

    /* Danh sách game */
    .game-select-modal .games-list {
        max-height: 450px;
        overflow-y: auto;
        border-radius: 12px;
        padding: 8px;
        margin: 0 -8px;
    }

    .game-select-modal .game-item {
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s;
        background-color: #fff;
    }

    .game-select-modal .game-item:hover {
        border-color: #4f46e5;
        box-shadow: 0 8px 16px rgba(79, 70, 229, 0.1);
        transform: translateY(-2px);
        background-color: #f8fafc;
    }

    .game-select-modal .game-info {
        flex: 1;
    }

    .game-select-modal .game-title {
        font-weight: 600;
        font-size: 18px;
        color: #1e293b;
        margin-bottom: 6px;
    }

    .game-select-modal .game-details {
        color: #64748b;
        font-size: 14px;
        max-width: 450px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .game-select-modal .game-details span {
        display: block;
        margin-bottom: 4px;
    }

    .game-select-modal .btn-select {
        background: linear-gradient(135deg, #4f46e5, #3b82f6);
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        transition: all 0.3s;
        min-width: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .game-select-modal .btn-select:hover {
        box-shadow: 0 8px 16px rgba(79, 70, 229, 0.2);
        transform: translateY(-2px);
    }

    .game-select-modal .btn-select i {
        font-size: 18px;
    }

    /* Thanh cuộn tùy chỉnh */
    .game-select-modal .games-list::-webkit-scrollbar {
        width: 10px;
    }

    .game-select-modal .games-list::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 10px;
    }

    .game-select-modal .games-list::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
        border: 2px solid #f1f5f9;
    }

    .game-select-modal .games-list::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
    }

    .game-select-modal .modal-footer {
        border-top: 1px solid #e2e8f0;
        padding: 20px 24px;
        display: flex;
        justify-content: flex-end;
    }

    .game-select-modal .modal-footer .btn-secondary {
        padding: 12px 24px;
        font-weight: 500;
        border-radius: 10px;
        border: none;
        background: #f1f5f9;
        color: #334155;
        transition: all 0.3s;
    }

    .game-select-modal .modal-footer .btn-secondary:hover {
        background: #e2e8f0;
        transform: translateY(-2px);
    }

    /* Badge số lượng game */
    .game-select-modal .game-count {
        font-size: 14px;
        background: rgba(255, 255, 255, 0.2);
        padding: 6px 14px;
        border-radius: 20px;
        margin-left: 12px;
        font-weight: 500;
    }

    /* Đánh dấu từ khóa tìm kiếm */
    .game-select-modal .highlight {
        background-color: rgba(79, 70, 229, 0.1);
        padding: 0 4px;
        border-radius: 4px;
        font-weight: 500;
        color: #4f46e5;
    }

    /* Phần đang tải dữ liệu */
    .game-select-modal .loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 0;
    }

    .game-select-modal .loading .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(79, 70, 229, 0.1);
        border-radius: 50%;
        border-top-color: #4f46e5;
        animation: spin 1s linear infinite;
        margin-bottom: 24px;
    }

    .game-select-modal .loading-text {
        font-size: 16px;
        color: #64748b;
        text-align: center;
        font-weight: 500;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes slideDown {
        from {
            transform: translateY(-30px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hàm hiển thị modal
            function showModal(modalId) {
                var modal = $('#' + modalId);
                modal.addClass('show');
                $('body').addClass('modal-open');
            }

            // Hàm ẩn modal
            function hideModal(modalId) {
                var modal = $('#' + modalId);
                modal.removeClass('show');
                $('body').removeClass('modal-open');
            }

            // Hàm reset trạng thái modal
            function resetModal(modalId) {
                var modal = $('#' + modalId);
                hideModal(modalId);
                // Xóa tất cả các sự kiện click cũ
                $('#gamesList').find('.game-item').off('click');
                // Xóa nội dung cũ
                $("#gamesList").empty();
                // Reset ô tìm kiếm
                $("#gameSearchInput").val('');
                // Reset số lượng game
                $("#gameCount").text('0 game');
            }

            // Hàm highlight các từ khóa tìm kiếm
            function highlightText(text, keyword) {
                if (!keyword) return text;

                const regex = new RegExp(`(${keyword})`, 'gi');
                return text.replace(regex, '<span class="highlight">$1</span>');
            }

            // Xử lý sự kiện đóng modal
            $(document).on('click', '.close-modal', function(e) {
                e.preventDefault();
                var modalId = $(this).closest('.game-select-modal').attr('id');
                resetModal(modalId);
            });

            // Đóng modal khi click ra ngoài
            $(document).on('click', '.game-select-modal', function(e) {
                if ($(e.target).hasClass('game-select-modal')) {
                    var modalId = $(e.target).attr('id');
                    resetModal(modalId);
                }
            });

            // Xử lý tìm kiếm trong modal games
            $(document).on("keyup", "#gameSearchInput", function() {
                var value = $(this).val().toLowerCase();
                var visibleCount = 0;

                $("#gamesList .game-item").each(function() {
                    var gameText = $(this).find('.game-info').text().toLowerCase();
                    var isVisible = gameText.indexOf(value) > -1;
                    $(this).toggle(isVisible);

                    if (isVisible) {
                        visibleCount++;

                        // Highlight từ khóa tìm kiếm
                        if (value.trim() !== '') {
                            $(this).find('.game-title').html(highlightText($(this).data('name'), value));
                            $(this).find('.app-id').html('App ID: ' + highlightText($(this).data('appid'), value));
                            $(this).find('.install-dir').html('Đường dẫn: ' + highlightText($(this).data('dir'), value));
                        } else {
                            // Khôi phục văn bản gốc
                            $(this).find('.game-title').text($(this).data('name'));
                            $(this).find('.app-id').text('App ID: ' + $(this).data('appid'));
                            $(this).find('.install-dir').text('Đường dẫn: ' + $(this).data('dir'));
                        }
                    }
                });

                // Hiển thị thông báo không tìm thấy kết quả
                if (visibleCount === 0 && value !== '') {
                    if ($("#gamesList .no-results").length === 0) {
                        $("#gamesList").append(`
                            <div class="no-results">
                                <i class="bi bi-search"></i>
                                <p>Không tìm thấy game nào phù hợp với từ khóa "${value}"</p>
                            </div>
                        `);
                    }
                } else {
                    $("#gamesList .no-results").remove();
                }

                // Cập nhật số lượng game hiển thị
                $("#gameCount").text(visibleCount + ' game');
            });

            // Xử lý nút scan games
            $(document).on('click', "#scanGamesBtn", function(e) {
                e.preventDefault();

                // Reset trạng thái modal trước khi quét
                resetModal('gamesModal');

                $(this).prop("disabled", true).html('<i class="bi bi-hourglass me-2"></i> Đang quét...');

                // Hiển thị modal đang quét
                showModal('scanningModal');

                // AJAX request
                $.ajax({
                    url: "?handler=ScanGames",
                    type: "GET",
                    cache: false,
                    success: function(response) {
                        // Ẩn modal đang quét
                        hideModal('scanningModal');

                        if (response && response.success && response.games && response.games.length > 0) {
                            // Hiển thị số lượng game tìm thấy
                            $("#searchResultText").text(`Đã tìm thấy ${response.games.length} game đã cài đặt trên máy tính.`);

                            // Hiển thị danh sách game
                            var gamesList = $("#gamesList");
                            gamesList.empty();

                            response.games.forEach(function(game) {
                                var listItem = $(`
                                    <div class="game-item">
                                        <div class="game-info">
                                            <div class="game-title">${game.gameName}</div>
                                            <div class="game-details">
                                                <span class="app-id">App ID: ${game.appId}</span>
                                                <span class="install-dir">Đường dẫn: ${game.installDir}</span>
                                            </div>
                                        </div>
                                        <button class="btn-select">
                                            <i class="bi bi-check2-circle"></i>Chọn
                                        </button>
                                    </div>
                                `);

                                // Lưu data để sử dụng khi tìm kiếm
                                listItem.data('name', game.gameName);
                                listItem.data('appid', game.appId);
                                listItem.data('dir', game.installDir);

                                listItem.on('click', function(e) {
                                    e.preventDefault();

                                    // Nếu click vào nút, thực hiện lựa chọn
                                    if ($(e.target).hasClass('btn-select') || $(e.target).closest('.btn-select').length > 0) {
                                        // Điền thông tin vào form
                                        $("#Profile_Name").val(game.gameName);
                                        $("#Profile_AppID").val(game.appId);
                                        $("#Profile_InstallDirectory").val(game.installDir);

                                        // Đóng modal
                                        resetModal('gamesModal');
                                    }
                                });

                                gamesList.append(listItem);
                            });

                            // Thêm hover effect cho các item
                            gamesList.find('.game-item').hover(
                                function() {
                                    $(this).find('.btn-select').html('<i class="bi bi-check2-circle"></i>Chọn');
                                },
                                function() {
                                    $(this).find('.btn-select').html('<i class="bi bi-check2-circle"></i>Chọn');
                                }
                            );

                            // Cập nhật số lượng game
                            $("#gameCount").text(response.games.length + ' game');

                            // Hiển thị modal danh sách game
                            showModal('gamesModal');
                        } else {
                            alert(response.message || "Không tìm thấy game nào");
                        }
                    },
                    error: function(xhr, status, error) {
                        // Ẩn modal đang quét
                        hideModal('scanningModal');
                        alert("Lỗi khi quét game: " + error);
                    },
                    complete: function() {
                        $("#scanGamesBtn").prop("disabled", false).html('<i class="bi bi-search me-2"></i> Quét danh sách game');
                    }
                });
            });


            // Xử lý lấy thông tin profile từ server
            $(document).on('click', "#getProfileBtn", function() {
                var selectedProfile = $("#serverProfile").val();
                if (!selectedProfile) {
                    alert("Vui lòng chọn một profile từ server");
                    return;
                }

                $(this).prop("disabled", true).html('<i class="bi bi-hourglass me-2"></i> Đang tải...');

                $.ajax({
                    url: "?handler=ProfileFromServer",
                    type: "GET",
                    cache: false,
                    data: { profileName: selectedProfile },
                    success: function(response) {
                        if (response && response.success && response.profile) {
                            var profile = response.profile;
                            $("#Profile_Name").val(profile.name);
                            $("#Profile_AppID").val(profile.appID);
                            $("#Profile_InstallDirectory").val(profile.installDirectory);
                            $("#Profile_Arguments").val(profile.arguments || "");
                            $("#Profile_ValidateFiles").prop("checked", profile.validateFiles);
                            $("#Profile_AutoRun").prop("checked", profile.autoRun);
                        } else {
                            alert("Không thể tải thông tin profile: " + (response.error || "Lỗi không xác định"));
                        }
                    },
                    error: function(xhr, status, error) {
                        alert("Lỗi khi tải thông tin profile: " + error);
                    },
                    complete: function() {
                        $("#getProfileBtn").prop("disabled", false).html('<i class="bi bi-download me-1"></i> Tải thông tin');
                    }
                });
            });

            // Xử lý nhập profile từ server
            $(document).on('click', "#importProfileBtn", function() {
                var selectedProfile = $("#serverProfile").val();
                if (!selectedProfile) {
                    alert("Vui lòng chọn một profile từ server");
                    return;
                }

                if (!confirm("Bạn có chắc muốn nhập profile '" + selectedProfile + "' từ server?")) {
                    return;
                }

                $(this).prop("disabled", true).html('<i class="bi bi-hourglass me-2"></i> Đang nhập...');

                $.ajax({
                    url: "?handler=ImportFromServer",
                    type: "POST",
                    cache: false,
                    data: { profileName: selectedProfile },
                    headers: {
                        "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response && response.success) {
                            alert(response.message);
                            window.location.href = response.redirectUrl || "./Dashboard";
                        } else {
                            alert("Không thể nhập profile: " + (response.error || "Lỗi không xác định"));
                        }
                    },
                    error: function(xhr, status, error) {
                        alert("Lỗi khi nhập profile: " + error);
                    },
                    complete: function() {
                        $("#importProfileBtn").prop("disabled", false).html('<i class="bi bi-check2-circle me-1"></i> Nhập profile từ server');
                    }
                });
            });
        });
    </script>
}