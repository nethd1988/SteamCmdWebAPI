@page
@model LicenseErrorModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ứng dụng đã bị khóa - SteamAUTO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .license-error-container {
            background-color: rgba(40, 40, 40, 0.95);
            border-radius: 12px;
            padding: 2rem;
            max-width: 650px;
            width: 90%;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .error-icon {
            color: #ff4444;
            font-size: 60px;
            margin-bottom: 1rem;
        }
        
        .locked-icon {
            position: relative;
            display: inline-block;
        }
        
        .locked-icon i {
            position: absolute;
            right: -10px;
            bottom: -5px;
            font-size: 30px;
            color: #ff4444;
            background-color: rgba(40, 40, 40, 0.8);
            border-radius: 50%;
            padding: 5px;
        }

        .error-title {
            color: #ff4444;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .error-message {
            color: #cccccc;
            margin-bottom: 2rem;
            font-size: 16px;
        }

        .error-details {
            background-color: rgba(255, 68, 68, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .error-details-title {
            color: #ff4444;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .error-details ul {
            list-style: none;
            padding: 0;
            margin: 0;
            color: #cccccc;
        }

        .error-details li {
            margin-bottom: 0.75rem;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            line-height: 1.5;
        }

        .error-details li i {
            color: #ff4444;
            flex-shrink: 0;
            margin-top: 3px;
        }

        .support-section {
            background-color: rgba(76, 175, 80, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .support-title {
            color: #4CAF50;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .support-info {
            color: #cccccc;
            text-align: left;
            margin-left: 1rem;
        }

        .support-info p {
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-contact {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: background-color 0.2s;
            margin-right: 1rem;
        }

        .btn-contact:hover {
            background-color: #45a049;
            color: white;
        }
        
        .btn-login {
            background-color: transparent;
            color: #cccccc;
            border: 1px solid #666;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }
        
        .btn-login:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }
        
        @@keyframes pulse {
            0% { opacity: 0.6; }
            50% { opacity: 1; }
            100% { opacity: 0.6; }
        }
        
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        .service-status {
            display: inline-block;
            padding: 0.5rem 1rem;
            background-color: rgba(255, 193, 7, 0.2);
            color: #ffc107;
            border-radius: 4px;
            margin: 1rem 0;
            font-size: 14px;
            animation: pulse 2s infinite;
        }
        
        .service-status i {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="license-error-container">
        <div class="error-icon locked-icon">
            <i class="bi bi-shield-exclamation" style="font-size: 60px;"></i>
            <i class="bi bi-lock-fill"></i>
        </div>
        <h1 class="error-title">Ứng dụng đã bị khóa</h1>
        <p class="error-message">
            Chức năng của ứng dụng đã bị khóa hoàn toàn do vấn đề với giấy phép.
        </p>
        
        <div class="service-status">
            <i class="bi bi-broadcast"></i> Service vẫn đang chạy trong nền
        </div>

        <div class="error-details">
            <div class="error-details-title">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Chi tiết vấn đề:
            </div>
            <ul>
                <li>
                    <i class="bi bi-x-circle-fill"></i>
                    <span>Giấy phép không hợp lệ hoặc đã hết hạn</span>
                </li>
                <li>
                    <i class="bi bi-x-circle-fill"></i>
                    <span>Không thể kết nối đến máy chủ xác thực giấy phép</span>
                </li>
                <li>
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <span>Tất cả chức năng của ứng dụng đã bị khóa, nhưng service vẫn chạy trong nền để duy trì kết nối đã thiết lập</span>
                </li>
                <li>
                    <i class="bi bi-info-circle-fill"></i>
                    <span>Để khôi phục tất cả chức năng, vui lòng cập nhật hoặc gia hạn giấy phép của bạn</span>
                </li>
            </ul>
        </div>

        <div class="support-section">
            <div class="support-title">
                <i class="bi bi-headset"></i>
                Hỗ trợ kỹ thuật:
            </div>
            <div class="support-info">
                <p><i class="bi bi-envelope"></i> Email: support@example.com</p>
                <p><i class="bi bi-telephone"></i> Hotline: 1900-xxxx</p>
                <p><i class="bi bi-clock"></i> Thời gian làm việc: 8:00 - 17:00 (Thứ 2 - Thứ 6)</p>
            </div>
        </div>

        <div>
            <a href="mailto:support@example.com?subject=Vấn đề giấy phép SteamAUTO" class="btn-contact">
                <i class="bi bi-envelope"></i>
                Liên hệ hỗ trợ
            </a>
            <a href="/Login" class="btn-login">
                <i class="bi bi-box-arrow-in-right"></i>
                Đăng nhập
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hàm kiểm tra giấy phép
        async function checkLicense() {
            try {
                const response = await fetch('/api/License/Check', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.isValid) {
                        window.location.href = '/Dashboard';
                    }
                }
            } catch (error) {
                console.error('Lỗi kiểm tra giấy phép:', error);
            }
        }

        // Kiểm tra giấy phép mỗi 10 giây
        setInterval(checkLicense, 10000);
        
        // Kiểm tra ngay khi trang tải xong
        document.addEventListener('DOMContentLoaded', checkLicense);
    </script>
</body>
</html>