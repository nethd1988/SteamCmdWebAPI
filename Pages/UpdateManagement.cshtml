@page
@model SteamCmdWebAPI.Pages.UpdateManagementModel
@{
    ViewData["Title"] = "Quản lý cập nhật";
    ViewData["ActivePage"] = "UpdateManagement";
}

<div class="page-header">
    <h1>Quản lý cập nhật game</h1>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
        <i class="bi bi-@(Model.IsSuccess ? "check-circle" : "exclamation-triangle") me-2"></i>
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<!-- Thêm form xóa profile -->
<form method="post" id="deleteProfileForm" asp-page-handler="DeleteProfile">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteProfileId" name="profileId" value="" />
</form>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Cài đặt kiểm tra cập nhật tự động</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="SaveUpdateCheckSettings" id="updateSettingsForm">
            @Html.AntiForgeryToken()
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="updateCheckEnabled" asp-for="UpdateCheckEnabled" />
                <label class="form-check-label" for="updateCheckEnabled">Kích hoạt kiểm tra cập nhật tự động</label>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="autoUpdateProfiles" asp-for="AutoUpdateProfiles" />
                <label class="form-check-label" for="autoUpdateProfiles">Tự động cập nhật profile khi có cập nhật mới</label>
            </div>
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Lưu ý:</strong> Hệ thống sử dụng Sever GL để tự động đăng ký nhận thông báo cập nhật game.
            </div>
            <button type="submit" class="btn btn-success" id="saveSettingsBtn">
                <i class="bi bi-save me-1"></i>
                Lưu cài đặt kiểm tra cập nhật
            </button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Thông tin cập nhật game đã kiểm tra</h5>
    </div>
    <div class="card-body">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th style="display:none;">App ID</th>
                        <th>Tên game/App ID</th>
                        <th>Đã đăng ký Cập Nhật</th>
                        <th>Đường dẫn</th>
                        <th>Dung lượng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.UpdateInfos != null && Model.UpdateInfos.Any())
                    {
                        foreach (var vm in Model.UpdateInfos)
                        {
                            <tr>
                                <td style="display:none;">@vm.ApiInfo.AppID</td>
                                <td>
                                    <div class="game-info-container">
                                        @if (!string.IsNullOrEmpty(vm.ApiInfo.IconPath))
                                        {
                                            <img src="@vm.ApiInfo.IconPath" alt="@vm.ApiInfo.Name" class="game-icon" />
                                        }
                                        else
                                        {
                                            <div class="game-icon-placeholder">
                                                <i class="bi bi-controller"></i>
                                            </div>
                                        }
                                        <div class="game-info">
                                            @vm.ApiInfo.Name<br />
                                            <small class="text-muted">@vm.ApiInfo.AppID</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (vm.IsRegisteredForUpdates)
                                    {
                                        <span class="status-badge registered">
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                            Đã đăng ký
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge not-registered">
                                            <i class="bi bi-x-circle-fill text-danger"></i>
                                            Chưa đăng ký
                                        </span>
                                    }
                                </td>
                                <td><small class="text-muted">@vm.InstallPath</small></td>
                                <td>@vm.FormattedSize</td>
                                <td>
                                    @if (vm.NeedsUpdate)
                                    {
                                        <span class="status-badge running">
                                            <i class="bi bi-cloud-arrow-down"></i>
                                            Cần cập nhật
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge stopped">
                                            <i class="bi bi-check-circle"></i>
                                            Đã cập nhật
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <form method="post" asp-page-handler="UpdateApp" class="update-form" onsubmit="return handleUpdateSubmit(this, '@vm.ApiInfo.Name');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="appId" value="@vm.ApiInfo.AppID" />
                                            <input type="hidden" name="profileId" value="@vm.ProfileId" />
                                            <button type="submit" class="btn-icon update-btn" title="Cập nhật">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        </form>
                                        <a href="?handler=DeleteProfile&id=@vm.ProfileId" class="btn-icon ms-2 btn-danger" 
                                            onclick="return confirm('Bạn có chắc chắn muốn xóa profile @vm.ProfileName?');"
                                            title="Xóa profile">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Không có thông tin cập nhật nào. Hãy kiểm tra cập nhật lần đầu tiên.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .badge.bg-primary {
        background-color: #3498db !important;
    }

    .badge.bg-info {
        background-color: #17a2b8 !important;
        color: white !important;
    }
    
    .profile-selection-header {
        position: sticky;
        top: 0;
        z-index: 100;
    }
    
    .btn-danger {
        color: white !important;
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
    }
    
    .btn-danger:hover {
        background-color: #c82333 !important;
        border-color: #bd2130 !important;
    }
    
    .ms-2 {
        margin-left: 0.5rem !important;
    }
    
    .status-badge.registered, .status-badge.not-registered {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }
    
    .text-success {
        color: #28a745 !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
    
    /* Thêm kiểu cho thông báo thành công */
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }
    
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    
    .alert-dismissible {
        padding-right: 4rem;
    }
    
    .btn-close {
        position: absolute;
        right: 0;
        top: 0;
        padding: 0.75rem 1.25rem;
        background: transparent;
        border: 0;
        font-size: 1.5rem;
        cursor: pointer;
    }
    
    /* Kiểu cho icon game */
    .game-info-container {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .game-icon {
        width: 32px;
        height: 32px;
        border-radius: 4px;
        object-fit: cover;
    }
    
    .game-icon-placeholder {
        width: 32px;
        height: 32px;
        border-radius: 4px;
        background-color: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 18px;
    }
    
    .game-info {
        display: flex;
        flex-direction: column;
    }
</style>

@section Scripts {
    <script>
        // Function để xác nhận xóa profile
        function confirmDelete(profileId, profileName, button) {
            Swal.fire({
                title: 'Xác nhận xóa',
                html: `Bạn có chắc chắn muốn xóa profile <strong>${profileName}</strong>?<br>Thao tác này không thể hoàn tác!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#d33',
            }).then((result) => {
                if (result.isConfirmed) {
                    // Hiện loading
                    Swal.fire({
                        title: 'Đang xóa...',
                        html: 'Vui lòng đợi trong giây lát',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                            
                            // Submit form
                            $(button).closest('form').submit();
                        }
                    });
                }
            });
        }
        
        // Xử lý form submit cập nhật
        function handleUpdateSubmit(form, gameName) {
            // Disable button để tránh click nhiều lần
            $(form).find('button.update-btn').prop('disabled', true);
            
            // Hiển thị thông báo đang xử lý
            var alertHtml = `
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-hourglass-split me-2"></i>
                    Đang thêm ${gameName} vào hàng đợi cập nhật...
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            
            $('.page-header').after(alertHtml);
            
            // Cho phép form tiếp tục submit
            return true;
        }
        
        $(document).ready(function() {
            // Ẩn thông báo sau 5 giây
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
            
            // Sự kiện đóng alert
            $('.btn-close').on('click', function() {
                $(this).closest('.alert').alert('close');
            });
            
            // Xử lý form lưu cài đặt bằng AJAX
            $('#updateSettingsForm').on('submit', function(e) {
                e.preventDefault();
                
                // Disable nút submit để tránh gửi nhiều lần
                $('#saveSettingsBtn').prop('disabled', true);
                
                // Hiển thị thông báo đang xử lý
                var loadingAlert = `
                    <div class="alert alert-info alert-dismissible fade show" id="settingsLoadingAlert" role="alert">
                        <i class="bi bi-hourglass-split me-2"></i>
                        Đang lưu cài đặt và đăng ký nhận thông báo cập nhật...
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                
                $('.page-header').after(loadingAlert);
                
                // Lấy dữ liệu form
                var formData = $(this).serialize();
                
                // Gửi request AJAX
                $.ajax({
                    url: '?handler=SaveUpdateCheckSettings',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        // Xóa thông báo loading
                        $('#settingsLoadingAlert').remove();
                        
                        // Hiển thị thông báo thành công
                        var successAlert = `
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>
                                Cài đặt kiểm tra cập nhật đã được lưu thành công.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        `;
                        
                        $('.page-header').after(successAlert);
                        
                        // Tải lại trang sau 1 giây để cập nhật thông tin
                        setTimeout(function() {
                            window.location.href = window.location.pathname;
                        }, 1000);
                    },
                    error: function(xhr, status, error) {
                        // Xóa thông báo loading
                        $('#settingsLoadingAlert').remove();
                        
                        // Hiển thị thông báo lỗi
                        var errorAlert = `
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Lỗi khi lưu cài đặt: ${error}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        `;
                        
                        $('.page-header').after(errorAlert);
                    },
                    complete: function() {
                        // Mở lại nút submit
                        $('#saveSettingsBtn').prop('disabled', false);
                    }
                });
            });
        });
    </script>
}
