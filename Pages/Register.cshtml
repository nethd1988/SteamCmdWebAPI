@page
@model SteamCmdWebAPI.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>STEAM<span>AUTO</span></h2>
            <p>Tạo tài khoản mới</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="auth-error">
                @Model.ErrorMessage
            </div>
        }

        <form method="post" class="auth-form">
            <div class="form-group">
                <label for="username">Tên đăng nhập</label>
                <input type="text" id="username" name="Username" required class="form-control" value="@Model.Username" autocomplete="username" />
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" name="Password" required class="form-control" autocomplete="new-password" />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <input type="password" id="confirmPassword" name="ConfirmPassword" required class="form-control" autocomplete="new-password" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-register">ĐĂNG KÝ</button>
                <a href="/Login" class="auth-link">Đã có tài khoản? Đăng nhập</a>
            </div>
        </form>
    </div>
</div>